{
  "name": "move_to_pose",
  "version": "1.0.0",
  "description": "Move the robot end-effector to a target pose in a given frame.",
  "tier": "T0",
  "input_schema": {
    "type": "object",
    "properties": {
      "pose": {"type": "object"},
      "frame": {"type": "string"}
    },
    "required": ["pose", "frame"]
  },
  "output_schema": {"type": "object"},
  "preconditions": ["arm_ready"],
  "postconditions": ["at_pose"],
  "timeout_s": 30
}

