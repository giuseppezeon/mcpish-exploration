{
  "name": "clean_workspace",
  "version": "1.0.0",
  "description": "Clean and sanitize the robot workspace",
  "tier": "T2",
  "input_schema": {
    "type": "object",
    "properties": {
      "cleaning_type": {
        "type": "string",
        "enum": ["surface_clean", "deep_clean", "sterilize", "decontaminate"],
        "default": "surface_clean"
      },
      "cleaning_agent": {"type": "string"},
      "cleaning_duration": {"type": "integer", "minimum": 1, "maximum": 3600, "default": 300},
      "temperature": {"type": "number", "minimum": 20, "maximum": 80, "default": 25},
      "areas": {
        "type": "array",
        "items": {"type": "string"}
      }
    },
    "required": ["cleaning_type"]
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "success": {"type": "boolean"},
      "areas_cleaned": {"type": "integer"},
      "cleaning_time": {"type": "number"},
      "contamination_level": {"type": "string"}
    }
  },
  "preconditions": ["workspace_accessible", "cleaning_agent_available"],
  "postconditions": ["workspace_clean", "contamination_removed"],
  "timeout_s": 1800,
  "safety": {
    "chemical_safety": true,
    "ventilation": true,
    "personal_protection": true
  },
  "failure_modes": [
    {
      "mode": "cleaning_agent_shortage",
      "mitigation": "alert_operator"
    },
    {
      "mode": "contamination_persistent",
      "mitigation": "repeat_cleaning"
    }
  ],
  "cost_model": {
    "estimated_duration": 600,
    "energy_cost": "high"
  }
}
