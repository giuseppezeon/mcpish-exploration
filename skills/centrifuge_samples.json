{
  "name": "centrifuge_samples",
  "version": "1.0.0",
  "description": "Centrifuge samples at specified speed and duration",
  "tier": "T2",
  "input_schema": {
    "type": "object",
    "properties": {
      "sample_ids": {
        "type": "array",
        "items": {"type": "string"}
      },
      "rpm": {"type": "integer", "minimum": 100, "maximum": 20000},
      "duration": {"type": "integer", "minimum": 1, "maximum": 3600},
      "temperature": {"type": "number", "minimum": 4, "maximum": 40, "default": 20},
      "acceleration": {"type": "number", "minimum": 0.1, "maximum": 10.0, "default": 1.0},
      "deceleration": {"type": "number", "minimum": 0.1, "maximum": 10.0, "default": 1.0},
      "balance_check": {"type": "boolean", "default": true}
    },
    "required": ["sample_ids", "rpm", "duration"]
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "success": {"type": "boolean"},
      "cycles_completed": {"type": "integer"},
      "total_time": {"type": "number"},
      "balance_status": {"type": "string"}
    }
  },
  "preconditions": ["centrifuge_ready", "samples_loaded", "balance_verified"],
  "postconditions": ["centrifugation_completed", "samples_processed"],
  "invariants": ["balance_maintained", "speed_control"],
  "timeout_s": 3600,
  "safety": {
    "balance_limits": true,
    "speed_limits": true,
    "emergency_brake": true
  },
  "failure_modes": [
    {
      "mode": "imbalance_detected",
      "mitigation": "emergency_stop"
    },
    {
      "mode": "speed_failure",
      "mitigation": "gradual_deceleration"
    }
  ],
  "cost_model": {
    "estimated_duration": 1800,
    "energy_cost": "high"
  }
}
