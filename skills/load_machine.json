{
  "name": "load_machine",
  "version": "1.0.0",
  "description": "Load a sample into a laboratory machine",
  "tier": "T2",
  "input_schema": {
    "type": "object",
    "properties": {
      "machine_id": {"type": "string"},
      "sample_id": {"type": "string"}
    },
    "required": ["machine_id", "sample_id"]
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "success": {"type": "boolean"},
      "machine_status": {"type": "string"}
    }
  },
  "preconditions": ["machine_ready", "sample_accessible"],
  "postconditions": ["sample_loaded"],
  "timeout_s": 60,
  "safety": {
    "machine_interlocks": true,
    "emergency_stop": true
  },
  "failure_modes": [
    {
      "mode": "machine_not_ready",
      "mitigation": "wait_and_retry"
    },
    {
      "mode": "sample_damaged",
      "mitigation": "abort_and_alert"
    }
  ],
  "retry_policy": {
    "max_attempts": 2,
    "backoff_factor": 1.5
  },
  "cost_model": {
    "estimated_duration": 30,
    "energy_cost": "medium"
  }
}
