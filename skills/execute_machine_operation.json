{
  "name": "execute_machine_operation",
  "version": "1.0.0",
  "description": "Execute machine operations (start cycles, set parameters, etc.) using machine database commands",
  "tier": "T2",
  "input_schema": {
    "type": "object",
    "properties": {
      "machine_id": {"type": "string"},
      "operation": {"type": "string"},
      "parameters": {
        "type": "object",
        "properties": {
          "rpm": {"type": "integer"},
          "duration": {"type": "integer"},
          "temperature": {"type": "number"},
          "humidity": {"type": "number"},
          "protocol_name": {"type": "string"},
          "cycles": {"type": "integer"},
          "wavelengths": {"type": "array"},
          "measurement_type": {"type": "string"}
        }
      },
      "timeout": {"type": "integer", "minimum": 1, "maximum": 3600, "default": 300}
    },
    "required": ["machine_id", "operation"]
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "success": {"type": "boolean"},
      "operation_result": {"type": "object"},
      "machine_status": {"type": "string"},
      "execution_time": {"type": "number"}
    }
  },
  "preconditions": ["machine_ready", "machine_database_available", "operation_supported"],
  "postconditions": ["operation_executed", "result_available"],
  "invariants": ["machine_operational", "parameters_valid"],
  "timeout_s": 600,
  "safety": {
    "parameter_limits": true,
    "machine_monitoring": true,
    "emergency_stop": true
  },
  "failure_modes": [
    {
      "mode": "operation_not_supported",
      "mitigation": "check_machine_capabilities"
    },
    {
      "mode": "parameter_out_of_range",
      "mitigation": "validate_parameters"
    },
    {
      "mode": "machine_fault",
      "mitigation": "emergency_stop_and_alert"
    }
  ],
  "retry_policy": {
    "max_attempts": 2,
    "backoff_factor": 2.0
  },
  "cost_model": {
    "estimated_duration": 180,
    "energy_cost": "high"
  },
  "machine_database": {
    "operations": ["start_cycle", "stop_cycle", "set_temperature", "set_humidity", "start_protocol", "start_reading", "get_results", "get_status"]
  }
}
